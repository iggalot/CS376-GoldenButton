<UserControl x:Class="GoldenButton.Controls.GamePieceControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GoldenButton.Controls"
             xmlns:convert="clr-namespace:GoldenButton.ValueConverters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <convert:ColorToBrushConverter x:Key="ColorToBrushConverter"/>

        <!-- The template for our game piece -->
        <ControlTemplate x:Key="MyPieceTemplate" TargetType="UserControl">
            <Grid>
                <Ellipse Grid.Row="0" Width="30" Height="30" Fill="{Binding Converter={StaticResource ColorToBrushConverter}}"/>
            </Grid>
        </ControlTemplate>
    </UserControl.Resources>

    <!-- The actual gamepiece control-->
    <UserControl Template="{StaticResource MyPieceTemplate}" />

</UserControl>
