<UserControl x:Class="GoldenButton.Controls.GamePieceControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GoldenButton"
             xmlns:convert="clr-namespace:GoldenButton.ValueConverters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <!-- A color to brush converter -->
        <convert:ColorToBrushConverter x:Key="ColorToBrushConverter"/>
        <convert:IndexToPieceColorConverter x:Key="IndexToPieceColorConverter"/>

        <!-- The template for our game piece -->
        <ControlTemplate x:Key="MyPieceTemplate" TargetType="UserControl">
            <Button Name="MyButton" Click="TileSelect_Click" Background="Transparent"
                    BorderThickness="{Binding Source={x:Static local:GameboardViewModel.GBSquareBorderThickness}}"
                    BorderBrush="{Binding Source={x:Static local:GameboardViewModel.GBSquareBorderColor}, Converter={StaticResource ColorToBrushConverter}}">
                <StackPanel Orientation="Horizontal">
                    <Ellipse
                        Width="{Binding Source={x:Static local:GameboardViewModel.GBTileDiameter}}" 
                        Height="{Binding Source={x:Static local:GameboardViewModel.GBTileDiameter}}" 
                        >

                        <!-- Add a hover over effect for our ellipse-->
                        <Ellipse.Style>
                            <Style TargetType="{x:Type Ellipse}">
                                <Setter Property="Fill" Value="{Binding Index, Converter={StaticResource IndexToPieceColorConverter}}" />
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Fill" Value="{Binding Source={x:Static local:GameboardViewModel.GBTileHoverColor}, Converter={StaticResource ColorToBrushConverter}}" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Ellipse.Style>

                    </Ellipse>
                </StackPanel>
            </Button>
        </ControlTemplate>
    </UserControl.Resources>

    <!-- The actual gamepiece control-->
    <UserControl Template="{StaticResource MyPieceTemplate}" />

</UserControl>
